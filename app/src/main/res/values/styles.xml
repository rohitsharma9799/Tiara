<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/arial</item>
    </style>

    <style name="MyEdittext">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:background">@drawable/edittext_background</item>

    </style>
    <!-- Base application theme. -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/arial</item>
    </style>
    <style name="loginParent" parent="parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/loginBkColor</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:fontFamily">@font/arial</item>
    </style>

    <style name="headerText" parent="parent">

        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arial</item>
    </style>

    <style name="loginHeader">

        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arial</item>
    </style>

    <style name="loginCard" parent="parent">
    </style>

    <style name="linearParent" parent="parent">

        <item name="android:fontFamily">@font/arial</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="modifiedEditText" parent="parent">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textSize">@dimen/newsMoreTextSize</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/login_button_bk</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arial</item>
    </style>
    <style name="parent">

        <item name="android:fontFamily">@font/arial</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="viewParent">

        <item name="android:fontFamily">@font/arial</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parent.contentLayout">

        <item name="android:fontFamily">@font/arial</item>
        <item name="android:background">@color/contentBodyColor</item>
        <item name="android:padding">@dimen/normalPadding</item>
    </style>

    <style name="viewParent.headerText">

        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.profileText">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/profileTextColor</item>
        <item name="android:textSize">@dimen/headerMoreTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.NoMode">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--INtro slider-->
    <style name="onBoardingHeaderText" parent="viewParent">

        <item name="android:textSize">@dimen/onboardingHeaderSize</item>
        <item name="android:textColor">@color/darkModeTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="onBoardingContentText" parent="viewParent">
        <item name="android:textSize">@dimen/onboardingContentSize</item>
        <item name="android:textColor">@color/darkModeTextColor</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

</resources>
