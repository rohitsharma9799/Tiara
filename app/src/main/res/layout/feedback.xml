<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/txt1"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/times"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:text="You Can Search"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:id="@+id/close_dialog"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_close_black_24dp"
        android:backgroundTint="#3d3d3d" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#dcdcdc"
        android:layout_below="@id/txt1"
        android:layout_marginTop="20dp"
        android:id="@+id/view1"/>
    <LinearLayout
        android:id="@+id/view2"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            style="@style/MyEdittext"
            android:id="@+id/name_dialog"
            android:textSize="17dp"
            android:fontFamily="@font/arial"
            android:textColorHint="@color/blackTextColor"
            android:drawableTint="@color/blackTextColor"
            android:hint="Name"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:lines="1"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/email_dialog"
            android:textSize="17dp"
            style="@style/MyEdittext"
            android:fontFamily="@font/arial"
            android:textColorHint="@color/blackTextColor"
            android:drawableTint="@color/blackTextColor"
            android:hint="Email"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:id="@+id/mobile_dialog"
            style="@style/MyEdittext"
            android:textSize="17dp"
            android:fontFamily="@font/arial"
            android:textColorHint="@color/blackTextColor"
            android:drawableTint="@color/blackTextColor"
            android:hint="Mobile"
            android:lines="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <Button
        android:id="@+id/search_dialog"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_width="156dp"
        android:layout_height="40dp"
        android:background="@drawable/button_background"
        android:text="Search"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:onClick="Salesnext"
        android:fontFamily="@font/times"
        android:textStyle="bold"
        android:drawableTint="@color/whiteCardColor"
        android:textColor="@color/white"
      android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/namerecylerview"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/search_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>