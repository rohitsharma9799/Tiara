<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    tools:context=".Activity.SalesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:id="@+id/asdf"
        android:background="@color/colorPrimary"
        android:layout_height="55dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/backpress"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:padding="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Recipt"
            android:layout_gravity="center"
            android:gravity="center|start"
            android:layout_marginRight="35dp"
            android:textSize="17dp"
            android:textColor="#fff"
            android:fontFamily="@font/times"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/asdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:weightSum="2"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_account"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_search_black_24dp"
                    android:hint="Account"
                    style="@style/MyEdittext"
                    android:lines="1"
                    android:textSize="17dp"
                    android:fontFamily="@font/arial"
                    android:textColorHint="@color/blackTextColor"
                    android:textColor="@color/blackTextColor"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Amount"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:textSize="17dp"
                    android:lines="1"
                    style="@style/MyEdittext"
                    android:textColorHint="@color/blackTextColor"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/times"
                    android:textColor="@color/blackTextColor"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:weightSum="3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:text="Metal :"
                     android:layout_margin="5dp"
                     android:fontFamily="@font/arial"
                     android:textSize="17dp"
                     android:textColor="@color/blackTextColor"
                     android:gravity="center|start"
                    android:layout_weight="1"/>
                 <EditText android:id="@+id/txt_metal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:lines="1"
                     android:textColorHint="@color/blackTextColor"
                     android:hint="0.00"
                     android:fontFamily="@font/arial"
                     android:textColor="@color/blackTextColor"
                     style="@style/MyEdittext"
                     android:textSize="17dp"
                     android:gravity="center_vertical"/>
               </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Title :"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/arial"
                        android:textSize="17dp"
                        android:textColor="@color/blackTextColor"
                        android:gravity="center|start"
                        android:layout_weight="1"/>
                    <EditText android:id="@+id/txt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lines="1"
                        android:textColorHint="@color/blackTextColor"
                        android:hint="0.00"
                        android:fontFamily="@font/arial"
                        android:textColor="@color/blackTextColor"
                        style="@style/MyEdittext"
                        android:textSize="17dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="weight :"
                        android:textSize="17dp"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/times"
                        android:textColor="@color/blackTextColor"
                        android:gravity="center|start"
                        android:layout_weight="1"/>
                    <EditText android:id="@+id/txt_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lines="1"
                        android:textColorHint="@color/blackTextColor"
                        android:hint="0.00"
                        android:fontFamily="@font/arial"
                        android:textColor="@color/blackTextColor"
                        style="@style/MyEdittext"
                        android:textSize="17dp"
                        android:gravity="center_vertical"/>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_cid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:tint="@color/blackTextColor"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/logo_image"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/cirLoginButton"
        android:text="save"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/times"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/loginViewsMargin" />


</RelativeLayout>